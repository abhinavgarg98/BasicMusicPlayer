<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Vertical" parent="Theme.AppCompat.Light">
        <item name="android:layout_marginVertical" tools:targetApi="o" tools:ignore="NewApi">20dp</item>
    </style>
    <style name="seekbar" parent="Theme.AppCompat.Light">
        <item name="android:progressBackgroundTint" tools:ignore="NewApi">#616060</item>
        <item name="android:progressTint" tools:targetApi="lollipop">#0829a3</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">#0d0d0d</item>
    </style>
</resources>

